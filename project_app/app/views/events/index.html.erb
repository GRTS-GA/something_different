

    <div class="events-container">
        <div class="sidebar-events">
            <h2 class="events-links"><a href="/">SEARCH AGAIN</a></h2>
            <h2 class="events-links"><a href="../events/new">CREATE AN EVENT</a></h2>
        </div>
        <div class="main-events">
            <h1 class="events-heading">all events</h1>
            <div class="searched-events">
                <div class="individual-searched-events">
                      <% @events.each do |ev| %>
                      <img src=<%= ev.image_url %> alt="" /><br>
                      <label class="searched-label">Name: </label> <%= link_to ev.name, event_path(ev) %> <br>
                      <label class="searched-label">Date: </label> <%= ev.event_date %>
                      <% end %>
                </div>
          </div>

              <div class="searched-img">
              <%= image_tag ev.image_url if ev.image? %>
              </div>
              <div class="event-details">
                  <label>Name: </label>
                  <%= link_to ev.name,  event_path(ev) %> <br>
                  <label>Date: </label> <br>
                  <h4><%= ev.event_date %></h4>
                  <br>
                  <%= render './comments/count', event: ev%>
                        <div class="commentdiv" id="commentbox">
                        <% @comment.event_id = ev.id %>
                        <%= render './comments/form', comment: @comment%>
                         </div>
              </div>
            </div>
            <hr>
        </div>


